<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/card_view_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_card"
            android:padding="@dimen/card_view_padding">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/card_view_image"
                android:visibility="gone"
                android:layout_height="@dimen/card_view_image" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/image"
                android:textSize="@dimen/card_view_title" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_view_description"
                android:layout_below="@+id/name" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>